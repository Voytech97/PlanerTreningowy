<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>resources\icons\weight.ico</ApplicationIcon>
    <PackageIcon>weight.ico</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="resources\icons\weight.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Update="resources\icons\weight.ico">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>